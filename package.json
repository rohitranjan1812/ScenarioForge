{
  "name": "scenarioforge",
  "version": "0.1.0",
  "private": true,
  "description": "Domain-agnostic graph-based scenario modeling, simulation, and optimization platform",
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@scenarioforge/web",
    "dev:api": "turbo run dev --filter=@scenarioforge/api",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "clean": "turbo run clean && rimraf node_modules",
    "db:migrate": "pnpm --filter @scenarioforge/api db:migrate",
    "db:seed": "pnpm --filter @scenarioforge/api db:seed",
    "db:reset": "pnpm --filter @scenarioforge/api db:reset"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "turbo": "^2.3.0",
    "typescript": "^5.6.3"
  }
}
