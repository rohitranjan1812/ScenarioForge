# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scenarioforge
DB_USER=scenarioforge
DB_PASSWORD=scenarioforge

# Database Connection Pool Limits
# Maximum number of connections in the pool
DB_POOL_MAX=20
# Minimum number of connections in the pool
DB_POOL_MIN=2
# Milliseconds a connection can be idle before being closed
DB_IDLE_TIMEOUT=30000
# Milliseconds to wait for a connection before timing out
DB_CONNECTION_TIMEOUT=10000
# Milliseconds for statement execution timeout
DB_STATEMENT_TIMEOUT=60000

# Request Limits
# Maximum request body size
MAX_REQUEST_SIZE=50mb
# Request timeout in milliseconds (2 minutes default)
REQUEST_TIMEOUT=120000

# Simulation Resource Limits
# Maximum iterations allowed for a simulation
MAX_SIMULATION_ITERATIONS=1000000
# Maximum execution time for a simulation in milliseconds (5 minutes default)
MAX_SIMULATION_TIME=300000
# Maximum number of raw result samples to store (memory optimization)
MAX_STORED_RESULTS=10000

# Redis Configuration (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Memory Management
# Enable garbage collection optimization (requires --expose-gc flag)
ENABLE_GC=false
